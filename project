      display: none;
      z-index: 9999;
      font-weight: 600;
      min-width: 250px;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 99999;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0,0,0,0.4);
    }

    .modal-content {
      background-color: #fff;
      margin: 15% auto;
      padding: 2rem;
      border: 1px solid #ccc;
      width: 90%;
      max-width: 400px;
      border-radius: 0.5rem;
    }
  </style>
